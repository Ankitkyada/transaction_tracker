<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Transaction List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
            padding: 20px;
        }

        h1 {
            color: #00ff88;
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .transaction-card {
            background-color: #1a1a1a;
            border-left: 4px solid #00ff88;
            padding: 16px;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0 2px 6px rgba(0, 255, 136, 0.15);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            min-height: 40px;
        }

        .transaction-details span {
            margin: 2px 0;
            font-size: 13px;
            line-height: 1.2;
        }

        .transaction-details {
            display: flex;
            flex-direction: column;
        }

        .transaction-details span {
            margin: 2px 0;
        }

        .transaction-label {
            font-weight: bold;
            color: #00ff88;
            margin-right: 5px;
        }

        .amount {
            font-weight: bold;
            font-size: 1rem;
            font-size: 14px;
            color: #00ff88;
        }

        .no-data {
            color: #999;
            font-style: italic;
        }

        .floating-btn {
            position: fixed;
            padding: 10px 18px;
            border: none;
            border-radius: 25px;
            font-weight: bold;
            color: #121212;
            background-color: #00ff88;
            box-shadow: 0 2px 8px rgba(0, 255, 136, 0.4);
            cursor: pointer;
            z-index: 1000;
            transition: transform 0.2s ease;
        }

        .card-right {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 6px;
        }

        .card-actions {
            display: flex;
            gap: 6px;
        }

        .btn-edit,
        .btn-delete {
            background: none;
            border: none;
            color: #00ff88;
            font-size: 16px;
            cursor: pointer;
            padding: 4px;
            transition: transform 0.2s ease;
        }

        .btn-delete {
            color: #ff4d4d;
        }

        .btn-edit:hover,
        .btn-delete:hover {
            transform: scale(1.2);
        }

        .floating-btn:hover {
            transform: scale(1.05);
        }

        .btn-edit {
            bottom: 20px;
            left: 20px;
        }

        .btn-add {
            top: 20px;
            right: 20px;
        }

        @media (max-width: 600px) {
            .transaction-card {
                position: relative;
                padding-top: 25px;
            }

            .amount {
                position: absolute;
                top: 6px;
                right: 12px;
                color: #ff4d4d;
                font-size: 14px;
                /* Red */
            }
        }
    </style>
</head>

<body>
    <h1>Transactions for User Name: <%= userId %></h1>
    <button class="floating-btn btn-add" onclick="window.location.href='/transactions/add'">Add</button>
    <% if (transactions.length > 0) { %>
    <% transactions.forEach(t => { %>
    <div class="transaction-card">
        <div class="transaction-details">
            <span><span class="transaction-label" style="color:#00ff88;">Paid By:</span> <%= t.paid_user_name %></span>
            <span><span class="transaction-label" style="color: #ff4444;">Paid For:</span> <%= t.participants %></span>
            <span><span class="transaction-label" style="color:#00ff88;">Description:</span> <%= t.description %></span>
            <span><span class="transaction-label" style="color:#00ff88;">Date:</span>
                <%= new Date(t.created_at).toLocaleString() %></span>
        </div>
        <div class="card-right">
            <div class="amount">‚Çπ<%= Number(t.amount).toFixed(2) %></div>
            <div class="card-actions">
                <button onclick="window.location.href='/transactions/edit/<%= t.id %>'" class="btn-edit">‚úèÔ∏è</button>
                <button onclick="confirmDelete('<%= t.id %>')" class="btn-delete">üóëÔ∏è</button>
            </div>
        </div>
    </div>
    <% }) %>
    <% } else { %>
    <p class="no-data">No transactions found for this user.</p>
    <% } %>
</body>

<script>
    function confirmDelete(transactionId) {
        if (confirm("Are you sure you want to delete this transaction?")) {
            fetch(`/transactions/delete/${transactionId}`, {
                method: "DELETE"
            }).then(() => window.location.reload());
        }
    }
</script>
</html>