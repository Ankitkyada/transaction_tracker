<!DOCTYPE html>
<html>
<head>
  <title>Audit Logs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    th { cursor: pointer; }
  </style>
</head>
<body class="p-4">
  <div class="container">
    <h2>Audit Logs</h2>

    <input type="text" id="search" class="form-control mb-3" placeholder="Search by name or email">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody id="resultTable">
        <% if (typeof result !== 'undefined' && Array.isArray(result)) { %>
          <% result.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.username %></td>
              <td><%= item.email %></td>
              <td><%= item.role %></td>
              <td><%= item.updated_at %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No audit logs found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <div id="pagination" class="mt-3"></div>
  </div>

</body>
</html>
