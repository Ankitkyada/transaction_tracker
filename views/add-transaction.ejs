<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Transaction</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #111;
            color: #d4ffd4;
        }

        body,
        html {
            overflow: visible !important;
        }

        .container {
            max-width: 500px;
            width: 100%;
            margin: 50px auto;
            background: #181f18;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 255, 0, 0.08);
            overflow: visible !important;
        }


        select.form-select {
            z-index: 9999;
            position: relative;
            appearance: auto;
            -webkit-appearance: auto;
            -moz-appearance: auto;
        }

        .form-label {
            font-weight: 500;
            color: #7fff7f;
        }

        h4 {
            color: #00ff00;
        }

        .form-control,
        .form-select {
            background: #222;
            color: #d4ffd4;
            border: 1px solid #00ff00;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #39ff14;
            box-shadow: 0 0 0 0.2rem rgba(0, 255, 0, .25);
        }

        .btn-primary {
            background: #00ff00;
            border: none;
            color: #111;
        }

        .btn-primary:hover {
            background: #39ff14;
            color: #111;
        }

        @media (max-width: 480px) {
            h4 {
                font-size: 1.2rem;
            }

            .btn {
                font-size: 0.9rem;
            }

            .form-control,
            .form-select {
                font-size: 0.95rem;
                padding: 8px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h4 class="mb-4">Add Transaction</h4>
        <form action="/add-transaction" method="POST">
            <div class="mb-3">
                <label class="form-label">Paid By</label>
                <select class="form-select" name="paid_user_id" required>
                    <% users.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Paid For</label>
                <select class="form-select" name="participant_user_id" required>
                    <% users.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Date</label>
                <input type="date" class="form-control" name="transaction_date" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Amount</label>
                <input type="number" step="0.01" class="form-control" name="amount" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Comment</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select class="form-select" name="category" required>
                    <option value="" disabled selected>Select category</option>
                    <option value="Breakfast-Tea">Breakfast-Tea</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    <option value="Vegetables">Vegetables</option>
                    <option value="House-Rent">House-Rent</option>
                    <option value="Water-Bills">Water-Bills</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Mavo">Mavo</option>
                    <option value="Emergency-Payment">Emergency-Payment</option>
                    <option value="Advance-Payments">Advance-Payments</option>
                    <option value="Others">Others</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success w-100">Add Transaction</button>
        </form>
    </div>
</body>

</html>